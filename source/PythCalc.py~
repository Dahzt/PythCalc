from decimal import Decimal, getcontext
import time as t

ti = 0.1
ti2 = 1

while True:
    print("Welcome to PythCalc.")
    t.sleep(ti)
    print("The calculator made in Python.")
    t.sleep(ti2)
    print("Select how many numbers you want to calculate [2, 3]")
    nc = input("> ")
    if nc == "2":
    
        print("Select what type of calculation you want to do [+] [-] [*] [/]")
        tct = input("> ")
        if tct == "+":
    
            tp1 = input("Select number 1: ")
            tp2 = input("Select number 2: ")
            print("The result is: ", Decimal(tp1) + Decimal(tp2))
            input()2100000000000000000000000
        elif tct == "-":
    
            tm1 = input("Select number 1: ")
            tm2 = input("Select number 2: ")
            print("The result is: ", Decimal(tm1) - Decimal(tm2))
            input()
        elif tct == "*":
    
            tt1 = input("Select number 1: ")
            tt2 = input("Select number 2: ")
            print("The result is: ", Decimal(tt1) * Decimal(tt2))
            input()
        elif tct == "/":
            
            td1 = input("Select number 1: ")
            td2 = input("Select number 2: ")
            print("The result is: ", Decimal(td1) / Decimal(td2))
            input()
        else:
    
            print("That is not a valid calculation type. Please rerun the program.")
    elif nc == "3":
       
        print("Select what type of calculation you want to do [+] [-] [*] [/]")
        thct = input("> ")
        if thct == "+":
    
            thp1 = input("Select number 1: ")
            thp2 = input("Select number 2: ")
            thp3 = input("Select number 3: ")
            print("The result is: ", Decimal(thp1) + Decimal(thp2) + Decimal(thp3))
            input()
        elif thct == "-":
            
            thm1 = input("Select number 1: ")
            thm2 = input("Select number 2: ")
            thm3 = input("Select number 3: ")
            print("The result is: ", Decimal(thm1) - Decimal(thm2) - Decimal(thm3))
            input()
        elif thct == "*":
    
            tht1 = input("Select number 1: ")
            tht2 = input("Select number 2: ")
            tht3 = input("Select number 3: ")
            print("The result is: ", Decimal(tht1) * Decimal(tht2) * Decimal(tht3))
            input()
        elif thct == "/":
    
            thd1 = input("Select number 1: ")
            thd2 = input("Select number 2: ")
            thd3 = input("Select number 3: ")
            print("The result is ", Decimal(thd1) / Decimal(thd2) / Decimal(thd3))
            input()
        else:
    
            print("That is not a valid calculation type. Please rerun the program.")
            input()
    else:
    
        print("That is not listed in the list. Please rerun the program.")
        input()

